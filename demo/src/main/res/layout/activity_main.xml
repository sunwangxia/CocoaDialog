<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Style"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/btn_alert_simple"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Simple"
        android:textAllCaps="false"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/alert"/>

    <Button
        android:id="@+id/btn_alert_ok_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Ok/Cancel"
        android:textAllCaps="false"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"/>


    <Button
        android:id="@+id/btn_alert_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/btn_alert_with_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Alert with Input"
        android:textAllCaps="false"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"/>


    <TextView
        android:id="@+id/action_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action Sheet Style"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"/>

    <Button
        android:id="@+id/btn_action_sheet_ok_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ok/Cancel"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <Button
        android:id="@+id/btn_action_sheet_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

</LinearLayout>
